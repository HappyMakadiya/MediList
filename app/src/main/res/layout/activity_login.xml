<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:baselineAligned="false"
        android:fadeScrollbars="false"
        android:isScrollContainer="false"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:verticalScrollbarPosition="right">

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:text="Login"
            android:textColor="#3F9B96"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/loginimage" />


        <EditText
            android:id="@+id/ptEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/emailidbackground"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:paddingStart="50dp"
            android:paddingBottom="10dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/ptPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/passwordbackground"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="50dp"
            android:paddingBottom="10dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginBottom="20dp"
            android:text="Forgot Password?" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bgroundedbtn"
            android:gravity="center|center_horizontal"
            android:outlineProvider="none"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tvDntAccSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Don't have an account ? Signup" />



    </LinearLayout>
</ScrollView>