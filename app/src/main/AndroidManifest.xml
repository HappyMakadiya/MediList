<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.medilist">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ShowPdfViewerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.BasicPatientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.AboutUsPatientActivity"
            android:parentActivityName=".patient.BasicPatientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.ProfilePatientActivity"
            android:parentActivityName=".patient.BasicPatientActivity"
            android:screenOrientation="portrait" />


        <activity android:name=".pharmacist.BasicPharmacistActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".pharmacist.AboutUsPharmaActivity"
            android:parentActivityName=".pharmacist.BasicPharmacistActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".pharmacist.ProfilePharmacistActivity"
            android:parentActivityName=".pharmacist.BasicPharmacistActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.ShowPdfViewer"
            android:screenOrientation="portrait" />

        <activity
            android:name=".doctor.BasicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.AboutUsActivity"
            android:parentActivityName=".doctor.BasicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.CreatePdf"
            android:parentActivityName=".doctor.BasicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.ProfileActivity"
            android:parentActivityName=".doctor.BasicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.NewPxActivity"
            android:parentActivityName=".doctor.BasicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".SignupAsPharmaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoSmallBar" />
        <activity
            android:name=".SignupAsPatientActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoSmallBar" />
        <activity
            android:name=".SignupAsDRActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoSmallBar" />
        <activity
            android:name=".SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoSmallBar" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoSmallBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/NoSmallBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>