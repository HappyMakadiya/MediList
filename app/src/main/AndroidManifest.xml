        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectUserActivity"></activity>
        <activity android:name=".pharmacist.BasicPharmacistActivity" />
        <activity android:name=".patient.BasicPatientActivity" />
        <activity
